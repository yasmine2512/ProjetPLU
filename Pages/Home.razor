@page "/"
@layout HomeLayout
@inject NavigationManager NavigationManager
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ThesisHub - Explore Academic Research</title>
    
</head>
<body>

     <!-- Navigation Bar -->
    <header>
        <div class="logo">ThesisHub</div>
        <nav>
            <ul>
                <li><a href="/">Home</a></li>
                <li><a href="/Explore">Browse Theses</a></li>
                <li><a href="/About">About</a></li>
                <li><a href="/Signup" class="btn">Sign Up</a></li>
                <li><a href="/Login" class="btn">Login</a></li>
            </ul>
        </nav>
    </header>

    <!-- Hero Section -->
    <section class="hero">
        <br>
        <br>
        <h1>Discover, Explore, and Share Academic Knowledge</h1>
        <p>Access Master's and Doctoral Theses </p>
        <br>
        <div class="search-bar">
            <input type="text" @bind="searchTerm" placeholder="Search by Title, Keywords, or University">
            <button @onclick="HandleSearch">Search</button>
        </div>
        <br><br><br>
        <br>
    </section>

    <section class="website-description">
        <div class="container">
            <h1>Welcome to ThesisHub – The Ultimate Thesis Repository</h1>
            <p>
                Our platform is designed to help students, researchers, and academics easily access and explore 
                master’s and doctoral theses from Our University. Whether you are looking for inspiration, 
                conducting research, or searching for a specific thesis, our extensive database makes it simple 
                to find relevant academic work.
            </p>
            <br><br>
            <p class="cta-text">
                Join us in building a centralized hub for academic knowledge and innovation!
            </p>
        </div>
    </section>

    <!-- Footer -->
    <footer>
        <p>&copy; 2025 ThesisHub. All rights reserved.</p>
        <ul>
            <li><a href="/About">About</a></li>
            <li><a href="#">Privacy Policy</a></li>
            <li><a href="#">Contact</a></li>
        </ul>
    </footer> 


</body>
</html>
@code {
    private string searchTerm = "";

    private void HandleSearch()
    {
        if (!string.IsNullOrEmpty(searchTerm.Trim()))
        {
            NavigationManager.NavigateTo($"/Explore?search={Uri.EscapeDataString(searchTerm)}");
        }
        else
        {
             NavigationManager.NavigateTo($"/Explore");
        }
    }

      private void HandleKeyDown(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            HandleSearch();
        }
    }
}
