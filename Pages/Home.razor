@page "/"
@layout HomeLayout
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ThesisHub - Explore Academic Research</title>
    <link rel="stylesheet" href="styles.css">
</head>
<body>

    <!-- Navigation Bar -->
    <header>
        <div class="logo">ThesisHub</div>
        <nav>
            <ul>
                <li><a href="/">Home</a></li>
                <li><a href="#">Browse Theses</a></li>
                <li><a href="/About">About</a></li>
                <li><a href="/Signup" class="btn">Sign Up</a></li>
                <li><a href="/Login" class="btn">Login</a></li>
            </ul>
        </nav>
    </header>

    <!-- Hero Section -->
    <section class="hero">
        <br>
        <br>
        <h1>Discover, Explore, and Share Academic Knowledge</h1>
        <p>Access Master's and Doctoral Theses from Universities Worldwide</p>
        <br>
        <div class="search-bar">
            <input type="text" placeholder="Search by Title, Keywords, or University">
            <button>Search</button>
        </div>
        <br><br><br>
    </section>

    <section class="website-description">
        <div class="container">
            <h1>Welcome to ThesisHub – The Ultimate Thesis Repository</h1>
            <p>
                Our platform is designed to help students, researchers, and academics easily access and explore 
                master’s and doctoral theses from universities worldwide. Whether you are looking for inspiration, 
                conducting research, or searching for a specific thesis, our extensive database makes it simple 
                to find relevant academic work.
            </p>
            <br><br>
            <p class="cta-text">
                Join us in building a centralized hub for academic knowledge and innovation!
            </p>
        </div>
    </section>

    <!-- Footer -->
    <footer>
        <p>&copy; 2025 ThesisHub. All rights reserved.</p>
        <ul>
            <li><a href="#">About</a></li>
            <li><a href="#">Privacy Policy</a></li>
